@{

}

<div class=" p-4">
	<h2 class="mb-3">Titres ayant le style @Model.LibelleStyle</h2>
	<hr />
	<ul class="list-unstyled">
		@foreach (var titre in Model.Titres)
		{
			<li>
				<div class="card mb-3 border-0" style="max-width: 540px;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src=@titre.UrlJaquette class="img-fluid rounded-start" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title"><a class="text-decoration-none" href="">@titre.Libelle</a></h5>
								<p class="card-text"><small class="text-muted">Durée : @titre.Duree</small></p>
							</div>
						</div>
					</div>
				</div>
			</li>
		}
	</ul>
</div>