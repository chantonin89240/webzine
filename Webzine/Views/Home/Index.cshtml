<h2 class="mb-3">Derniers titres chroniqués</h2>
<ul style="list-style: none;">
    @foreach(var titre in Model.Titres)
    {
        <li>
        <div class="card bg-light mb-3">
            <div class="row">
                <div class="col-3 col-md-3 col-sm-3">
                    <img src=@titre.UrlJaquette class="card-img-top" alt="...">
                </div>
                <div class="d-flex flex-column justify-content-between card-body col-4 col-md-4 col-sm-border-4">
                    <h5 class="card-title row"><a href="" style="text-decoration: none;">@titre.Libelle</a></h5>
                    <p class="card-text row p-4">@titre.Chronique</p>
