@model Webzine.ViewModels.CommentairesViewModel

<h1>Supprimer un commentaire</h1>
<hr>
@if (Model is null){

    <h2>Erreur! Modèle nul.</h2>
}else{

    if(Model.ContextCommentaire is null){
        <h2>Erreur! Commentaire nul.</h2>
    }else{

        <form action="/Commentaire/Effacer?comment=@Model.ContextCommentaire.IdCommentaire">
        <h3>&Ecirc;tes vous s&ucirc;r de vouloir supprimer ce commentaire?</h3>

        <content class="row">
        <blockquote class="blockquote">@Model.ContextCommentaire.Contenu</blockquote>
        <span class="blockquote_footer">--<strong>@Model.ContextCommentaire.Auteur</strong> le @Model.ContextCommentaire.DateCreation sur <em><a href="/Titre/Titre?idTitre=@Model.ContextTitre.IdTitre">@Model.ContextTitre.Libelle</a></em> </span> 
        
        </content>
        <button type="submit" class="row btn btn-danger">Supprimer</button>
        </form>
}   }
<a href="/Admin/Commentaire">Retour &agrave l'administration des commentaires</a>

