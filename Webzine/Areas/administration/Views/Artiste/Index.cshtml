@{
	
}

<div class="p-4">
	<h2 class="mb-4">Artistes</h2>
	<hr />

	<!-- lien vers le formulaire d'ajout d'un artiste -->
	<a href="/administration/artiste/creation" class="btn btn-primary mb-3"><i class="fas fa-plus me-2"></i>Ajouter un nouvel artiste</a>

	<!-- tableau qui affiche tout les artistes ainsi que les liens qui permet de les modifiers ou de les supprimers -->
	<table class="table table-bordered table-striped">
		<thead>
			<tr class="table-active">
				<th class="col-8" scope="col"><span>Nom de l'artiste</span></th>
				<th class="col-4" scope="col"><span class="d-flex justify-content-center">Actions</span></th>
			</tr>
		</thead>
		<tbody>

			@foreach (var artiste in Model)
			{
				<tr>
					<td>@artiste.Nom</td>
					<td class="d-flex justify-content-center"><a href="/administration/artiste/edit?IdArtiste=@artiste.IdArtiste"><i class="fas fa-edit me-2"></i></a><a href="/administration/artiste/suppression?IdArtiste=@artiste.IdArtiste"><i class="fas fa-trash"></i></a></td>
				</tr>
			}

		</tbody>
	</table>

</div>