@{
	@using Webzine.WebApplication.ViewModels
}
<div class=" p-4">

	<h2 class="mb-3">Styles</h2>
	<hr />
	<a href="/administration/style/creation" class="btn btn-primary text-nowrap col-3 col-md-3 col-sm-3 mb-3"><i class="fas fa-plus me-2"></i>Ajouter un nouvel style</a>
	<table class="table table-bordered table-striped">
		<thead>
			<tr class="table-active">
				<th class="col-11" scope="col"><span>Libellé</span></th>
				<th class="col-1" scope="col"><span class="d-flex justify-content-center">Actions</span></th>
			</tr>
		</thead>
		<tbody>

			@foreach (var style in StyleViewModel.Styles)
			{
				<tr>
					<td>@style.Libelle</td>
					<td class="d-flex justify-content-center"><a href="/administration/style/edit?idStyle=@style.IdStyle"><i class="fas fa-edit me-2"></i></a><a href="/administration/style/suppression?idStyle=@style.IdStyle"><i class="fas fa-trash"></i></a></td>
				</tr>
			}

		</tbody>
	</table>

</div>