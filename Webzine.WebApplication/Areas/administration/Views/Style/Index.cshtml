@model Webzine.WebApplication.Areas.administration.ViewModels.StyleViewModel

<div class=" p-3">

	<h2 class="mb-3">Styles</h2>
	<hr />

	<!-- lien vers la formulaire d'ajout de style -->
	<a asp-area="administration" asp-controller="style" asp-action="create" class="btn btn-primary mb-3"><i class="fas fa-plus me-2"></i>Ajouter un nouvel style</a>
	<table class="table table-bordered table-striped">
		<thead>
			<tr class="table-active">
				<th class="col-11" scope="col"><span>Libellé</span></th>
				<th class="col-1" scope="col"><span class="d-flex justify-content-center">Actions</span></th>
			</tr>
		</thead>
		<tbody>

			@foreach (var style in @Model.Styles)
			{
				<tr>
					<td>@style.Libelle</td>
					<td class="d-flex justify-content-center"><a asp-area="administration" asp-controller="style" asp-action="edit" asp-route-id="@style.IdStyle"><i class="fas fa-edit me-2"></i></a><a asp-area="administration" asp-controller="style" asp-action="delete" asp-route-id="@style.IdStyle"><i class="fas fa-trash"></i></a></td>
				</tr>
			}

		</tbody>
	</table>

</div>