@{
	@model Webzine.WebApplication.Areas.administration.ViewModels.StyleViewModel
}
<div class="p-4">
	<h2 class="mb-3">Créer un style</h2>
	<hr />

	<!-- formulaire d'ajout de style -->
	<form class="p-4" method="post" asp-area="administration" asp-controller="style" asp-action="create" >
		<div class="input-group mb-4 col-6 libelleStyle">
			<label asp-for="Style.Libelle" class="d-flex align-items-center me-2" for="libelleInput">Libellé<span class="text-danger">*</span></label>
			<input asp-for="Style.Libelle" name="Style.Libelle" class="form-control me-2 rounded col-2" id="libelleInput" aria-describedby="styleCreate" placeholder="Style">
			<button type="submit" class="btn btn-primary rounded">Sauvegarder</button>
			<span asp-validation-for="Style.Libelle" class="text-danger col-10 ms-5 ps-3"></span>
		</div>
		
		
	</form>

	<!-- lien de retour vers la page Index de style admin -->
	<a class="row text-decoration-none" asp-action="Index">Retour à l'administration des styles</a>
</div>