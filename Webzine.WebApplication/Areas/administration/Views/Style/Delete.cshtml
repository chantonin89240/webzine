@model Webzine.WebApplication.Areas.administration.ViewModels.StyleViewModel

<div class=" p-4">
	<h2 class="mb-3">Supprimer un style</h2>
	<hr />

	<!-- formualire de suppression de style -->
	<form class="ms-4" asp-area="administration" asp-controller="style" asp-action="delete" asp-route-id="@Model.Style.IdStyle" >
		<p class="row ">Etes-vous sûr de vouloir supprimer le style de musique "@Model.Style.Libelle"?</p>
		<button type="submit" class="row btn btn-danger text-nowrap col-3 col-md-3 col-sm-3 mb-5">Supprimer</button>
	</form>

	<!-- lien de retour vers la page Index de style admin -->
	<a class="row text-decoration-none" asp-action="Index">Retour à l'administration des styles</a>
</div>