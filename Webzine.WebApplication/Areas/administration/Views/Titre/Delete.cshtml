<div class="divSup">
	<h2>Supprimer un titre</h2>
	<hr />

	<!-- formulaire de suppression de titre -->
	<form method="post" asp-area="administration" asp-controller="titre" asp-action="delete" asp-route-id="@Model.Titre.IdTitre" class="mb-5">
		<p class="row ms-0">Etes-vous sûr de vouloir supprimer le titre "@Model.Titre.Libelle" de @Model.Titre.Artiste.Nom ?</p>
		<button type="submit" class="btn btn-danger">Supprimer</button>
	</form>

	<!-- lien de retour vers la page Index de titre admin -->
	<a class="row text-decoration-none ms-0" asp-area="administration" asp-controller="titre" asp-action="Index">Retour à l'administration des titres</a>
</div>
