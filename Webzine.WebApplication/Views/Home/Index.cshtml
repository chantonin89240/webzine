@{
    var i = 0;
    var j = 0;
}

<h2 class="mb-3">Derniers titres chroniqués</h2>
<ul class="list-unstyled">
    @foreach(var titre in Model.Titres)
    {
        if (i < 3)
        {
            i++;
            <li>
                <div class="card bg-light mb-3">
                    <div class="row">
                        <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <img src=@titre.UrlJaquette class="card-img-top" alt="...">
                        </div>
                        <div class="d-flex flex-column justify-content-between card-body col-xxl-7 col-xl-7 col-lg-5 col-md-12 col-sm-border-12 col-xs-border-12 m-1">
                            <h5><a href="/Artiste/Artiste?idArtiste=@titre.IdArtiste">@titre.Artiste.Nom</a> - <a href="/Titre/Titre?idTitre=@titre.IdTitre">@titre.Libelle</a></h5>
                            <p class="card-text row p-4">@titre.Chronique.Substring(0, 250) ...</p>
                            <div class="row ms-1 d-flex justify-content-between">
                                <a href="/Titre/Titre?idTitre=@titre.IdTitre" class="btn btn-primary text-nowrap col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-5 col-xs-5 m-1" style="max-width: 180px;">Lire la suite</a>
                                <p class="text-nowrap col-xxl-3 col-xl-3 col-lg-5 col-md-4 col-sm-border-12 col-xs-12 m-1">
                                    <i class="fas fa-calendar"></i><span class="ms-1">@titre.DateSortie</span>
                                </p>
                                <p class="col-xxl-4 col-xl-5 col-lg-12 col-md-12 col-sm-border-12 col-xs-12 text-nowrap m-1">
                                    <i class="fas fa-tags"></i> Style :
                                    @foreach (var ts in @titre.TitresStyles)
                                    {
                                        <a href="/Titre/TitresStyle?id=@ts.IdStyle" class="text-decoration-none">
                                            <span>@ts.Style.Libelle</span>
                                        </a>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
        else
        {
            break;
        }
    }
</ul>
<div class="d-flex justify-content-between mb-3">
    <button type="button" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg><span style="vertical-align: middle; margin-left: 5px;">Titres plus récents</span>
    </button>
    <button type="button" class="btn btn-secondary">
        <span style="vertical-align: middle;margin-right: 5px;">Titres plus anciens</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4.5 5.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
        </svg>
    </button>
</div>
<div>
    <h2 class="mt-4 mb-3">Titres les plus populaires</h2>
	<div class="row">
		@foreach(var titre in Model.Titres)
        {
            if (j < 3)
            {
                j++;
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-sm-5 col-xs-5">	
                    <div class="card mb-3 bg-light">
                        <img class="card-img-top imPopHome" src=@titre.UrlJaquette alt="Card image cap">
                        <div class="card-body">
                            <a href="" style="text-decoration: none;">@titre.Libelle</a>
                            <div class="">
                                <p>par <a href="" style="text-decoration: none;">@titre.Artiste.Nom</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                break;
            }
        }
	</div>
</div>