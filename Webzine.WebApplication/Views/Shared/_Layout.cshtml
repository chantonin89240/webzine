<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Webzine</title>
		<link rel="stylesheet" href="~/css/App.css"/>
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
		<script src="~/lib/font-awesome/js/all.js"></script>
		<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	</head>
	<body>
		<!-- Barre de navigation -->
		<!-- Template Bootstrap 5 -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">Webzine</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item ">
							<a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index"  asp-route-pageNumber="1">
								<i class="fas fa-home"></i>
								<span >Accueil</span>
							</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-tools"></i>
								<span >Administration</span>
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
								<li><a class="dropdown-item" asp-area="administration" asp-controller="Artiste" asp-action="Index"><i class="fas fa-users me-1"></i>Artistes</a></li>
								<li><a class="dropdown-item" asp-area="administration" asp-controller="commentaire" asp-action="Index"><i class="fas fa-comments me-1"></i>Commentaires</a></li>
								<li><a class="dropdown-item" asp-area="administration" asp-controller="Style" asp-action="Index"><i class="fas fa-tags me-1"></i>Styles</a></li>
								<li><a class="dropdown-item" asp-area="administration" asp-controller="Titre" asp-action="Index"><i class="fas fa-music me-1"></i>Titres</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Contact">
								<i class="fas fa-envelope"></i>
								<span >Contact</span>
							</a>
						</li>
					</ul>
					<form class="input group d-flex" method="post" asp-area="" asp-controller="recherche" asp-action="index" >
						<input name="searchedItem" class="form-control me-1" type="search" placeholder="Trouver un artiste/titre" aria-label="Search">
						<button class="btn btn-primary" type="submit">
							<i class="fas fa-search"></i>
						</button>
					</form>
				</div>
			</div>
		</nav>
		<!-- Conteneur principal -->
		<!-- Template Bootstrap 5 -->
		<div class="container-fluid overflow-auto mb-5 p-4 h-100">
			@if(!this.Url.ActionContext.HttpContext.Request.RouteValues.Values.Contains("administration"))
			{
				<div class="row">
					<div class="section col-xxl-10 col-xl-10 col-md-9 col-sm-12 col-xs-12">
						<!-- Render -->
						@RenderBody()
					</div>
					<aside class="sidebar col-xxl-2 col-xl-2 col-xl-2 col-md-3 col-sm-12 col-xs-12">
						<!-- Sidebar coté droit -->
						<!-- Template Bootstrap 5 -->
						@await Component.InvokeAsync("Sidebar")
					</aside>
				</div>
			}else
			{
				<div class="col-xxl-12 col-xl-12 col-md-12 col-sm-12 col-xs-12">
					@RenderBody()
				</div>
			}
		</div>
		<!-- Pied de page -->
		<!-- Template Bootstrap 5 -->
		<nav class="navbar fixed-bottom navbar-dark bg-dark">
			<div class="container-fluid d-flex justify-content-center">
				<a class="navbar-brand h6 text-wrap fs-6" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">Webzine - Tous droits réservés © RakletTeam 2021 </a>
			</div>
		</nav>
	</body>
</html>
